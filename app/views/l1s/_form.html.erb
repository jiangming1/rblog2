      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@l1.errors.count, "error") %> prohibited this l1 from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @l1.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :a, :class => 'control-label' %>
