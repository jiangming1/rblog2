<%- model_class = Smstaglist -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:laiyuan) %></th>
      <th><%= model_class.human_attribute_name(:isonline) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @smstaglists.each do |smstaglist| %>
      <tr>
        <td><%= link_to smstaglist.id, smstaglist_path(smstaglist) %></td>
        <td><%= smstaglist.name %></td>
        <td><%= smstaglist.price %></td>
        <td><%= smstaglist.laiyuan %></td>
        <td><%= smstaglist.isonline %></td>
        <td><%=l smstaglist.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_smstaglist_path(smstaglist), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      smstaglist_path(smstaglist),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_smstaglist_path,
            :class => 'btn btn-primary' %>
