<%- model_class = Smsuser -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:usertype) %></th>
      <th><%= model_class.human_attribute_name(:qq) %></th>
      <th><%= model_class.human_attribute_name(:mail) %></th>
      <th><%= model_class.human_attribute_name(:mob) %></th>
      <th><%= model_class.human_attribute_name(:loginname) %></th>
      <th><%= model_class.human_attribute_name(:zhifubao) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @smsusers.each do |smsuser| %>
      <tr>
        <td><%= link_to smsuser.id, smsuser_path(smsuser) %></td>
        <td><%= smsuser.usertype %></td>
        <td><%= smsuser.qq %></td>
        <td><%= smsuser.mail %></td>
        <td><%= smsuser.mob %></td>
        <td><%= smsuser.loginname %></td>
        <td><%= smsuser.zhifubao %></td>
        <td><%=l smsuser.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_smsuser_path(smsuser), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      smsuser_path(smsuser),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_smsuser_path,
            :class => 'btn btn-primary' %>
