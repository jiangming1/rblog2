  </div>
  <div class="control-group">
    <%= f.label :qq, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :qq, :class => 'form-control' %>
    </div>
    <%= error_span(@smsuser[:qq]) %>
  </div>
  <div class="control-group">
    <%= f.label :mail, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mail, :class => 'form-control' %>
    </div>
    <%= error_span(@smsuser[:mail]) %>
  </div>
  <div class="control-group">
    <%= f.label :mob, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mob, :class => 'form-control' %>
    </div>
    <%= error_span(@smsuser[:mob]) %>
  </div>
  <div class="control-group">
    <%= f.label :loginname, :class => 'control-label' %>
