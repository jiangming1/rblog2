<%= form_for @smsuser, :html => { :class => "form-horizontal smsuser" } do |f| %>

    <% if @smsuser.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@smsuser.errors.count, "error") %> prohibited this smsuser from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @smsuser.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :usertype, :class => 'control-label' %>
