<%- model_class = Rj -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:ming) %></th>
      <th><%= model_class.human_attribute_name(:danjia) %></th>
      <th><%= model_class.human_attribute_name(:wangjia) %></th>
      <th><%= model_class.human_attribute_name(:jieshao) %></th>
      <th><%= model_class.human_attribute_name(:pdf) %></th>
      <th><%= model_class.human_attribute_name(:caozuo) %></th>
      <th><%= model_class.human_attribute_name(:kehuduan) %></th>
      <th><%= model_class.human_attribute_name(:daohang) %></th>
      <th><%= model_class.human_attribute_name(:chuangkou) %></th>
      <th><%= model_class.human_attribute_name(:baobiao) %></th>
      <th><%= model_class.human_attribute_name(:jiaocheng) %></th>
      <th><%= model_class.human_attribute_name(:xinxijiegou) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @rjs.each do |rj| %>
      <tr>
        <td><%= link_to rj.id, rj_path(rj) %></td>
        <td><%= rj.ming %></td>
        <td><%= rj.danjia %></td>
        <td><%= rj.wangjia %></td>
        <td><%= rj.jieshao %></td>
        <td><%= rj.pdf %></td>
        <td><%= rj.caozuo %></td>
        <td><%= rj.kehuduan %></td>
        <td><%= rj.daohang %></td>
        <td><%= rj.chuangkou %></td>
        <td><%= rj.baobiao %></td>
        <td><%= rj.jiaocheng %></td>
        <td><%= rj.xinxijiegou %></td>
        <td><%=l rj.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_rj_path(rj), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      rj_path(rj),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_rj_path,
            :class => 'btn btn-primary' %>
