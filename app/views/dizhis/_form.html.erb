<%= form_for @dizhi, :html => { :class => "form-horizontal dizhi" } do |f| %>

    <% if @dizhi.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@dizhi.errors.count, "error") %> prohibited this dizhi from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @dizhi.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@dizhi[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :tel, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tel, :class => 'form-control' %>
    </div>
    <%= error_span(@dizhi[:tel]) %>
  </div>
  <div class="control-group">
    <%= f.label :addr, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :addr, :class => 'form-control' %>
    </div>
    <%= error_span(@dizhi[:addr]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            dizhis_path, :class => 'btn btn-default' %>

<% end %>
