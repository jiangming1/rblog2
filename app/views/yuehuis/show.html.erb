<%- model_class = Yuehui -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:xingming) %>:</strong></dt>
  <dd><%= @yuehui.xingming %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tel) %>:</strong></dt>
  <dd><%= @yuehui.tel %></dd>
  <dt><strong><%= model_class.human_attribute_name(:addr) %>:</strong></dt>
  <dd><%= @yuehui.addr %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              yuehuis_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_yuehui_path(@yuehui), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              yuehui_path(@yuehui),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
