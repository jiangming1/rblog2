<%= form_for @smsperson, :html => { :class => "form-horizontal smsperson" } do |f| %>

    <% if @smsperson.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@smsperson.errors.count, "error") %> prohibited this smsperson from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @smsperson.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :type, :class => 'control-label' %>
