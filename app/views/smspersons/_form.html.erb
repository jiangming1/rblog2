    <%= error_span(@smsperson[:qq]) %>
  </div>
  <div class="control-group">
    <%= f.label :mail, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mail, :class => 'form-control' %>
    </div>
    <%= error_span(@smsperson[:mail]) %>
  </div>
  <div class="control-group">
    <%= f.label :mob, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mob, :class => 'form-control' %>
    </div>
    <%= error_span(@smsperson[:mob]) %>
