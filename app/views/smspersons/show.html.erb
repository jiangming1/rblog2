<%- model_class = Smsperson -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
  <dd><%= @smsperson.type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:qq) %>:</strong></dt>
  <dd><%= @smsperson.qq %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mail) %>:</strong></dt>
  <dd><%= @smsperson.mail %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mob) %>:</strong></dt>
  <dd><%= @smsperson.mob %></dd>
  <dt><strong><%= model_class.human_attribute_name(:loginname) %>:</strong></dt>
  <dd><%= @smsperson.loginname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zhifubao) %>:</strong></dt>
  <dd><%= @smsperson.zhifubao %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              smspeople_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_smsperson_path(@smsperson), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              smsperson_path(@smsperson),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
