<%- model_class = Smstag -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @smstag.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @smstag.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobid) %>:</strong></dt>
  <dd><%= @smstag.mobid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobno) %>:</strong></dt>
  <dd><%= @smstag.mobno %></dd>
  <dt><strong><%= model_class.human_attribute_name(:laiyuan) %>:</strong></dt>
  <dd><%= @smstag.laiyuan %></dd>
  <dt><strong><%= model_class.human_attribute_name(:isonline) %>:</strong></dt>
  <dd><%= @smstag.isonline %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              smstags_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_smstag_path(@smstag), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              smstag_path(@smstag),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
