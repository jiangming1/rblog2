<%- model_class = Smstag -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:mobid) %></th>
      <th><%= model_class.human_attribute_name(:mobno) %></th>
      <th><%= model_class.human_attribute_name(:laiyuan) %></th>
      <th><%= model_class.human_attribute_name(:isonline) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @smstags.each do |smstag| %>
      <tr>
        <td><%= link_to smstag.id, smstag_path(smstag) %></td>
        <td><%= smstag.name %></td>
        <td><%= smstag.price %></td>
        <td><%= smstag.mobid %></td>
        <td><%= smstag.mobno %></td>
        <td><%= smstag.laiyuan %></td>
        <td><%= smstag.isonline %></td>
        <td><%=l smstag.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_smstag_path(smstag), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      smstag_path(smstag),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_smstag_path,
            :class => 'btn btn-primary' %>
